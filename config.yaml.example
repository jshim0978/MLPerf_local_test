infrastructure:
  deployment_type: ssh
  gpu_nodes:
  - name: gpu-node-1
    ip: 192.168.1.100
    ssh_user: your-username
    gpu_type: NVIDIA A30
    gpu_memory: 24GB
  - name: gpu-node-2
    ip: 192.168.1.101
    ssh_user: your-username
    gpu_type: NVIDIA A30
    gpu_memory: 24GB
benchmark:
  model: meta-llama/Llama-3.1-8B-Instruct
  scenario: Server
  dataset:
    name: CNN DailyMail
    total_samples: 13368
    file_path: cnn_eval.json
directories:
  remote_mlperf_dir: ~/official_mlperf/inference/language/llama3.1-8b
  local_results_dir: ./results
  visual_reports_dir: ./results/visual_reports
monitoring:
  check_interval: 60
  auto_generate_reports: true
  save_logs: true
