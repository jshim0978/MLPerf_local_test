# Copy this file to secret.yaml and add your HuggingFace token
apiVersion: v1
kind: Secret
metadata:
  name: huggingface-secret
  labels:
    app: mlperf-llama
type: Opaque
data:
  # Base64 encoded HuggingFace token
  # Get token from: https://huggingface.co/settings/tokens
  # Encode with: echo -n "your_token_here" | base64
  token: <BASE64_ENCODED_HF_TOKEN>

---
# Example of how to create the secret:
# kubectl create secret generic huggingface-secret \
#   --from-literal=token=your_hf_token_here \
#   --dry-run=client -o yaml > secret.yaml